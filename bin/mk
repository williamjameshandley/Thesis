#!/bin/bash

cd $(dirname $0)/..  # change to the correct directory

THESIS="thesis.tex"

if [[ ! -e $THESIS ]]
then
    >&2 echo "Please execute this command in the base thesis directory"
    exit 1
fi

pdflatex -shell-escape thesis
bibtex thesis
pdflatex -shell-escape thesis
pdflatex -shell-escape thesis
