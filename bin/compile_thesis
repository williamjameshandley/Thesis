#!/bin/bash

cd $(dirname $0)/..  # change to the correct directory

THESIS="thesis.tex"

if [[ ! -e $THESIS ]]
then
    >&2 echo "Please execute this command in the base thesis directory"
    exit 1
fi


if which latexmk > /dev/null
then
    LATEXMK=`which latexmk`
else
    >&2 echo "latexmk could not be found"
    exit 1
fi

if [ $# -eq 0 ]
then
    ARGS=''
else
    ARGS=$1
fi

$LATEXMK $ARGS \
    -pdf \
    -pdflatex='pdflatex --shell-escape --enable-write18 %O %S' \
    -interaction=nonstopmode \
    -bibtex \
    thesis.tex
